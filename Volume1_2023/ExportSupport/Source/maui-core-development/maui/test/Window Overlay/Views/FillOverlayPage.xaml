<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WindowOverlay.Samples"
             x:Class="WindowOverlay.Samples.FillOverlayPage"
             Title="Fill">

    <VerticalStackLayout Spacing="25"
                         HorizontalOptions="Center"
                         VerticalOptions="Center">
        <Button Text="Push a page as model"
                Clicked="OnPushPageAsModelButtonClicked" />

        <Button Text="Push a page as normal"
                Clicked="OnPushPageAsNormalButtonClicked" />

        <Button x:Name="AddOverlayButton"
                Text="Add overlay"
                Clicked="OnAddOverlayButtonClicked" />

        <Button Text="Remove overlay"
                Clicked="OnRemoveOverlayButtonClicked" />

        <Slider ValueChanged="OnSliderValueChanged"
                DragCompleted="OnSliderDragCompleted" />
    </VerticalStackLayout>

</ContentPage>
